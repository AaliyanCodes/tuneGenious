<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splashbackground"
    tools:context=".Wellcome">
    <TextView
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:id="@+id/text2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="139dp"
        android:text="Welcome to Tonify!"
        android:textSize="36dp"
        android:textAlignment="center"
        android:fontFamily="@font/roboslab"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/text3"
        app:layout_constraintTop_toBottomOf="@+id/text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Are you ready to generate AI Music Today!"
        android:textSize="@dimen/_15ssp"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/roboslab1"
        android:textColor="@color/white"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text3"
        android:src="@drawable/welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button1"/>
    <com.google.android.material.button.MaterialButton
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/button1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Lets Go"
        android:textColor="@android:color/black"
        app:cornerRadius="25dp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:layout_marginBottom="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>